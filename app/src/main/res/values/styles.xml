<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight" xmlns:tools="http://schemas.android.com/tools">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionBarTheme">@style/MyActionBar</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:navigationBarColor" tools:targetApi="27">@android:color/white</item>
    </style>

    <style name="MyActionBar" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorText</item>
    </style>

    <!-- Splash screen theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimaryDark">#ffffffff</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>