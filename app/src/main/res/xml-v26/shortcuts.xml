<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">

    <shortcut
        android:shortcutId="storages"
        android:enabled="true"
        android:icon="@drawable/shortcut_storages"
        android:shortcutShortLabel="@string/storages">
